---
layout: base
---

<article class="home | page">
    {{ content | safe }}
</article>

{%- for subpage in collections.subpage | sortByOrder -%}
    <article
        class="page | region two-column-grid"
        {% if subpage.data.title === 'About' or subpage.data.title === 'Work'  %}
        data-layout="reversed"
        {% endif %}
    >
        {{ subpage.content | safe }}
    </article>
{%- endfor -%}
